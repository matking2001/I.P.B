              <%# link_to  asistentes_path(@asistente), class: "btn btn-primary btn-block" do %>
                  <%# fa_icon 'long-arrow-alt-left'%>
                  <!--Regresar-->
              <%#% end %>    
          </div>
        </div>
      </div>
    </div>
  </div>
</div>